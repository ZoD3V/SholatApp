    <androidx.core.widget.NestedScrollView
        android:id="@+id/rounded_home"
        android:layout_width="0dp"
        android:layout_height="510dp"
        android:background="@drawable/rounded_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">

            <LinearLayout
                android:id="@+id/list_shalat1"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="60px"
                android:elevation="5dp"
                android:padding="20dp"
                android:background="@drawable/list_shalat">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/shubuh" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/waktu_shubuh"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/white"
                    android:textSize="19dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/shubuh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:fontFamily="@font/semibold"
                    android:text="--:--"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/list_shalat2"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:elevation="5dp"
                android:layout_marginBottom="60px"
                android:padding="20dp"
                android:background="@drawable/list_shalat">
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/dhuha" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/waktu_dhuha"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/white"
                    android:textSize="19dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/dhuha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/semibold"
                    android:gravity="end"
                    android:text="--:--"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/list_shalat3"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:elevation="5dp"
                android:layout_marginBottom="60px"
                android:padding="20dp"
                android:background="@drawable/list_shalat">
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/dzuhur" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu Dzuhur"
                    android:textColor="@color/white"
                    android:fontFamily="@font/semibold"
                    android:textSize="19dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/dzuhur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:text="--:--"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/list_shalat4"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:elevation="5dp"
                android:layout_marginBottom="60px"
                android:padding="20dp"
                android:background="@drawable/list_shalat">
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ashar" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/waktu_ashar"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/white"
                    android:textSize="19dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/ashar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:fontFamily="@font/semibold"
                    android:text="--:--"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/list_shalat5"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:elevation="5dp"
                android:layout_marginBottom="60px"
                android:padding="20dp"
                android:background="@drawable/list_shalat">
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/maghrib" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/waktu_maghrib"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/semibold"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/maghrib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:fontFamily="@font/semibold"
                    android:text="--:--"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/list_shalat6"
                android:layout_width="match_parent"
                android:elevation="5dp"
                android:layout_height="95dp"
                android:layout_marginBottom="60px"
                android:padding="20dp"
                android:background="@drawable/list_shalat">
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/isya" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/waktu_isya"
                    android:textColor="@color/white"
                    android:textSize="19dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/semibold"
                    android:textAlignment="center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/isya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:fontFamily="@font/semibold"
                    android:text="--:--"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!--    </com.google.android.material.card.MaterialCardView>-->


    <androidx.cardview.widget.CardView
        android:id="@+id/card_date"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_margin="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tanggal"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAlignment="center"
                android:paddingStart="20dp"
                android:textSize="17dp"
                android:fontFamily="@font/semibold"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>

            <TextView
                android:id="@+id/weltext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#838383"
                android:textAlignment="center"
                android:fontFamily="@font/semibold"
                android:textSize="17dp"
                android:layout_marginHorizontal="25dp"
                android:layout_weight="20"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3392613" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="-1dp" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:layout_gravity="bottom"
            android:id="@+id/navBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4FADBB"
            app:fabAlignmentMode="center"
            app:fabCradleRoundedCornerRadius="50dp"
            app:fabCradleMargin="10dp"
            app:hideOnScroll="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llTime"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/kiblat_rounded"
                            android:backgroundTint="@android:color/white"
                            android:padding="7dp"
                            android:src="@drawable/dzikr"
                            app:tint="#4FADBB" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:id="@+id/llMosque"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/kiblat_rounded"
                            android:backgroundTint="@android:color/white"
                            android:padding="5dp"
                            android:src="@drawable/quran"
                            app:tint="#4FADBB" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:backgroundTint="#7B8FBB"
            app:layout_anchor="@+id/navBar"
            app:srcCompat="@drawable/shalat" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <!--    </LinearLayout>-->
</androidx.constraintlayout.widget.ConstraintLayout>