    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E5FAFF"
        android:elevation="10dp"
        android:gravity="top">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/circle_3"
                    android:layout_gravity="left|top"
                    android:translationY="-70dp"
                    android:translationX="-50dp"/>
                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circle_2"
                    android:layout_gravity="right|bottom"
                    android:translationY="70dp"
                    android:translationX="10dp"/>
                <View
                    android:layout_width="106dp"
                    android:layout_height="106dp"
                    android:background="@drawable/circle_1"
                    android:layout_gravity="right|bottom"
                    android:translationY="51dp"
                    android:translationX="57dp"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:paddingRight="50dp"
                    android:paddingVertical="15dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                    android:id="@+id/backtol"

                    app:tint="@color/black"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrows"/>
                    <ImageView
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="28dp"
                        android:layout_width="96dp"
                        android:layout_height="74dp"
                        android:src="@drawable/quran_img"
                        />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Al-Fatihah"
                        android:textSize="23dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvInfo"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="Makkiyah - 7 Ayat"
                        android:textSize="15dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/black"/>
                </LinearLayout>
                </LinearLayout>

            </FrameLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
